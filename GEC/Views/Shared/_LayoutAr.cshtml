                    <!--user-->
                    <li class="light-blue dropdown-modal">
                        <a data-toggle="dropdown" href="#" class="dropdown-toggle">
                            <img class="nav-user-photo" src="~/Assets/Avatars/businessman.png" alt="User Photo" />
                            <span class="user-info">
                                <small>مرحبا،</small>
                                Iheb
                            </span>

                            <i class="ace-icon fas fa-caret-down"></i>
