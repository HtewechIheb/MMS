    <script type="text/javascript" src="~/Assets/JS/Shared/bootstrap-treeview.min.js"></script>
    <script type="text/javascript" src="~/Assets/JS/Shared/moment.min.js"></script>
    <script type="text/javascript" src="~/Assets/JS/Shared/pagination.min.js"></script>
    <script type="text/javascript" src="~/Assets/JS/Shared/sweetalert2.all.min.js"></script>

    <!-- Main Layout Script -->
    <script type="text/javascript" src="~/Assets/JS/Shared/main.js"></script>

    <!-- ace scripts -->
    <script type="text/javascript" src="~/Assets/JS/Shared/ace-elements.min.js"></script>
