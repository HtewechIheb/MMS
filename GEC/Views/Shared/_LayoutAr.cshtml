                </ul>
            </div>
        </div>
    </div>
    <div class="main-container ace-save-state" id="main-container">
        <script type="text/javascript">
            try { ace.settings.loadState('main-container') } catch (e) { }
        </script>

        <!--sidebar-->
        <div id="sidebar" class="sidebar responsive ace-save-state">
            <script type="text/javascript">
                try { ace.settings.loadState('sidebar') } catch (e) { }
            </script>

            <!--sidebar shortcuts-->
            <div class="sidebar-shortcuts" id="sidebar-shortcuts">
                <div class="sidebar-shortcuts-large" id="sidebar-shortcuts-large">

                    <a href="/Ar/Mails" class="btn btn-success tooltip-success" data-toggle="tooltip" data-placement="bottom" title="المراسلات">
                        <i class="ace-icon fas fa-mail-bulk"></i>
                    </a>

                    <a href="/Ar/Folders" class="btn btn-success tooltip-success" data-toggle="tooltip" data-placement="bottom" title="الملفات">
                        <i class="ace-icon fas fa-folders"></i>
                    </a>

                    <a href="/Ar/Contacts" class="btn btn-success tooltip-success" data-toggle="tooltip" data-placement="bottom" title="المراسلون">
                        <i class="ace-icon fas fa-user"></i>
                    </a>

                    <a href="/Ar/Groups" class="btn btn-success tooltip-success" data-toggle="tooltip" data-placement="bottom" title="المجموعات">
                        <i class="ace-icon fas fa-users"></i>
                    </a>
                </div>

                <div class="sidebar-shortcuts-mini" id="sidebar-shortcuts-mini">
                    <span class="btn btn-success"></span>

                    <span class="btn btn-success"></span>

                    <span class="btn btn-success"></span>

                    <span class="btn btn-success"></span>
                </div>
            </div>

            <!--sidebar treeview-->
            <ul class="nav nav-list">
                @RenderSection("Sidebar", required: false)
            </ul>

            <div class="sidebar-toggle sidebar-collapse" id="sidebar-collapse">
                <i id="sidebar-toggle-icon" class="ace-icon fas fa-angle-double-left ace-save-state" data-icon1="ace-icon fas fa-angle-double-right" data-icon2="ace-icon fas fa-angle-double-left"></i>
            </div>
        </div>

        <!--main content-->
        <div class="main-content">
            <div class="main-content-inner">
                <!--header-->
                <div class="breadcrumbs ace-save-state" id="breadcrumbs">
                    <button class="btn btn-success pull-left breadcrumbs-button" id="new-contact-button">
                        <i class="ace-icon fas fa-user-plus"></i>
                        <span class="button-text">مراسل جديد</span>
                    </button>
                    <button class="btn btn-success pull-left breadcrumbs-button" id="new-mail-button">
                        <i class="ace-icon fas fa-folder-plus"></i>
                        <span class="button-text">مراسلة جديدة</span>
                    </button>
                    <button class="btn btn-success pull-left breadcrumbs-button" id="advanced-search-button">
                        <i class="ace-icon fas fa-search-plus"></i>
                        <span class="button-text">بحث معمق</span>
                    </button>
                    <!--search-->
                    <div class="nav-search pull-left">
                        <form action="/Ar/Mails/Search" method="GET" class="form-search" id="nav-search-form">
                            <span class="input-icon">
                                <i class="ace-icon fas fa-search nav-search-icon" id="nav-search-button"></i>
                                <input type="text" placeholder="بحث ..." class="nav-search-input popover-error" name="queryString" id="nav-search-input" autocomplete="off" data-toggle="popover" title="<i class='fas fa-exclamation-triangle'></i> خطأ" data-content="الرجاء إدخال نص البحث." data-placement="bottom" data-trigger="focus" required />
                                <input type="hidden" id="dayString" name="dayString" />
                                <input type="hidden" id="monthString" name="monthString" />
                                <input type="hidden" id="yearString" name="yearString" />
                            </span>
                        </form>
                    </div>
                </div>

                <!--content-->
                <div class="page-content">
                    <!-- PAGE CONTENT BEGINS -->
                    @{
                        string savePrefix = ViewContext.ViewData.TemplateInfo.HtmlFieldPrefix;

                        ViewContext.ViewData.TemplateInfo.HtmlFieldPrefix = "NewMail";
                        @await Component.InvokeAsync("NewMail", new { model = new NewMailArViewModel(), websiteLanguage = WebsiteLanguage.Ar });

                        ViewContext.ViewData.TemplateInfo.HtmlFieldPrefix = "NewFolder";
                        @await Component.InvokeAsync("NewFolder", new { model = new NewFolderArViewModel(), websiteLanguage = WebsiteLanguage.Ar });

                        ViewContext.ViewData.TemplateInfo.HtmlFieldPrefix = "NewContact";
                        @await Component.InvokeAsync("NewContact", new { model = new NewContactArViewModel(), websiteLanguage = WebsiteLanguage.Ar });

                        ViewContext.ViewData.TemplateInfo.HtmlFieldPrefix = savePrefix;
                    }
                    @RenderBody()
                    <!-- PAGE CONTENT ENDS -->
                </div>
            </div>
        </div>

        <!--footer-->
        <div class="footer">
            <div class="footer-inner">
                <div class="footer-content">
                    <!--buttons-->
                    <span class="action-buttons">
                        <a href="#">
                            <i class="ace-icon fab fa-twitter-square light-blue bigger-150"></i>
                        </a>

                        <a href="#">
                            <i class="ace-icon fab fa-facebook-square text-primary bigger-150"></i>
                        </a>

                        <a href="#">
                            <i class="ace-icon fas fa-rss-square orange bigger-150"></i>
                        </a>
                    </span>

                    &nbsp; &nbsp;

                    <!--text-->
                    <span class="bigger-120">
                        <span class="blue bolder">Iheb Htewech Solutions</span>
                        Application &copy; 2019-2020
                    </span>
                </div>
            </div>
        </div>

        <!--scroll up button-->
        <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
            <i class="ace-icon fas fa-angle-double-up icon-only bigger-110"></i>
        </a>
    </div>

    <!-- basic scripts -->
    <script type="text/javascript" src="~/Assets/JS/Shared/jquery-2.1.4.min.js"></script>
    <script type="text/javascript" src="~/Assets/JS/Shared/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Assets/JS/Shared/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">
        if ('ontouchstart' in document.documentElement) document.write("<script type='text/javascript' src='~/Assets/JS/Shared/jquery.mobile.custom.min.js'>" + "<" + "/script>");
    </script>

