@model DisplayMailsViewModel

<!--Filtering-->
<div class="row mail-filtering mail-filtering-hidden-576">
    @if (Model.enableMailTypeFiltering)
    {
        <div class="col-xs-4 col-md-3 mail-filtering-entry">
            <label for="filtering-type" class="mail-filtering-label">Type:</label>
            <select class="form-control form-control-sm mail-filtering-input" id="filtering-type" name="filtering-type">
                <option value="all">Tous</option>
                <option value="0">Entrant</option>
                <option value="1">Sortant</option>
                <option value="2">Interne</option>
            </select>
        </div>
        <div class="col-xs-4 col-md-3 mail-filtering-entry">
            <label for="filtering-channel" class="mail-filtering-label">Canal:</label>
            <select class="form-control form-control-sm mail-filtering-input" id="filtering-channel" name="filtering-channel">
                <option value="all">Tous</option>
                <option value="0">Document</option>
                <option value="1">Email</option>
                <option value="2">Colis Postal</option>
            </select>
        </div>
        <div class="col-xs-4 col-md-3 mail-filtering-entry">
            <label for="filtering-confidentiality" class="mail-filtering-label">Confidentialité:</label>
            <select class="form-control form-control-sm mail-filtering-input" id="filtering-confidentiality" name="filtering-confidentiality">
                <option value="all">Tous</option>
                <option value="1">Normal</option>
                <option value="2">Confidentiel</option>
            </select>
        </div>
    }
    else
    {
        <div class="col-xs-6 col-md-4 mail-filtering-entry">
            <label for="filtering-channel" class="mail-filtering-label">Canal:</label>
            <select class="form-control form-control-sm mail-filtering-input" id="filtering-channel" name="filtering-channel">
                <option value="all">Tous</option>
                <option value="0">Document</option>
                <option value="1">Email</option>
                <option value="2">Colis Postal</option>
            </select>
        </div>
        <div class="col-xs-6 col-md-4 mail-filtering-entry">
            <label for="filtering-confidentiality" class="mail-filtering-label">Confidentialité:</label>
            <select class="form-control form-control-sm mail-filtering-input" id="filtering-confidentiality" name="filtering-confidentiality">
                <option value="all">Tous</option>
                <option value="1">Normal</option>
                <option value="2">Confidentiel</option>
            </select>
        </div>
    }
</div>
<div class="row mail-filtering mail-filtering-shown-576">
    @if (Model.enableMailTypeFiltering)
    {
        <div class="col-xs-12 mail-filtering-entry">
            <label for="filtering-type" class="mail-filtering-label">Type:</label>
            <select class="form-control form-control-sm mail-filtering-input" id="filtering-type" name="filtering-type">
                <option value="all">Tous</option>
                <option value="0">Entrant</option>
                <option value="1">Sortant</option>
                <option value="2">Interne</option>
            </select>
        </div>
    }
    <div class="col-xs-12 mail-filtering-entry">
        <label for="filtering-channel" class="mail-filtering-label">Catégorie:</label>
        <select class="form-control form-control-sm mail-filtering-input" id="filtering-channel" name="filtering-channel">
            <option value="all">Tous</option>
            <option value="0">Document</option>
            <option value="1">Email</option>
            <option value="2">Colis Postal</option>
        </select>
    </div>
    <div class="col-xs-12 mail-filtering-entry">
        <label for="filtering-confidentiality" class="mail-filtering-label">Confidentialité:</label>
        <select class="form-control form-control-sm mail-filtering-input" id="filtering-confidentiality" name="filtering-confidentiality">
            <option value="all">Tous</option>
            <option value="1">Normal</option>
            <option value="2">Confidentiel</option>
        </select>
    </div>
</div>

<!--View Switch Buttons 576-->
<div class="header-right-buttons view-buttons-shown-576">
    <button class="btn btn-white btn-primary btn-bold tooltip-info" id="mail-table-view-button-576" data-toggle="tooltip" data-placement="top" title="Vue Tableau">
        <i class="fas fa-table"></i>
    </button>
    <button class="btn btn-white btn-primary btn-bold tooltip-info" id="mail-list-view-button-576" data-toggle="tooltip" data-placement="top" title="Vue Liste">
        <i class="fas fa-th-list"></i>
    </button>
</div>

<!--Table View-->
<div class="mail-table-view table-view" id="mail-table-view">
    <table id="mail-dynamic-table" class="table table-striped table-bordered table-hover dataTable_fixed">
        <thead>
            <tr>
                <th class="mail-table-checkbox center">
                    <label class="pos-rel">
                        <input type="checkbox" class="ace" />
                        <span class="lbl"></span>
                    </label>
                </th>
                <th class="mail-table-id hidden"></th>
                <th class="mail-table-third hidden-768">Date de réception</th>
                <th class="mail-table-second hidden-480">Expéditeur</th>
                <th class="mail-table-first">Objet</th>
                <th class="mail-table-actions">Actions</th>
            </tr>
        </thead>

        <tbody>
        </tbody>
    </table>
</div>

<!--List View-->
<div class="hidden mail-list-view list-view" id="mail-list-view">
    <div class="search search-area well no-margin-bottom form-inline">
        <div class="row">
            <div class="col-xs-6 col-sm-4 search-length">
                <label>
                    Élements affichés:
                    <select class="form-control input-sm" id="mail-list-view-search-length">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </label>
            </div>
            <div class="hidden-xs col-sm-4 filer_options"></div>
            <div class="col-xs-6 col-sm-4 search-filter">
                <label>
                    Recherche:
                    <input type="search" class="form-control input-sm" placeholder="" id="mail-list-view-search-input">
                </label>
            </div>
        </div>
    </div>

    <div class="mails-content"></div>
    <div class="search-area well well-sm text-center" id="mails-list-pagination"></div>
</div>
