@using GEC.ViewModels.Contacts
@model EditContactFrViewModel

<div class="edit-contact-popup-wrapper">
    <div class="edit-contact-popup">
        <span class="closeButton">&times;</span>
        <h3 class="header smaller lighter blue">Modifier Contact</h3>
        <div class="row edit-contact-popup-content">
            <form id="edit-contact-form" class="form-horizontal">

                <input type="hidden" asp-for="WebsiteLanguage" />
                <input type="hidden" asp-for="Id" />

                <div class="edit-contact-detail-entry">
                    <div class="edit-contact-detail-label">
                        <label asp-for="Nature">Nature<span class="red">*</span></label>
                    </div>
                    <div class="edit-contact-detail-input">
                        <select asp-for="Nature" asp-items="Html.GetEnumSelectList<Nature>()"></select>
                        <span asp-validation-for="Nature" class="text-danger"></span>
                    </div>
                </div>

                <div class="edit-contact-detail-entry">
                    <div class="edit-contact-detail-label">
                        <label asp-for="ContactType">Type<span class="red">*</span></label>
                    </div>
                    <div class="edit-contact-detail-input">
                        <select asp-for="ContactType" asp-items="Html.GetEnumSelectList<ContactType>()"></select>
                        <span asp-validation-for="ContactType" class="text-danger"></span>
                    </div>
                </div>

                <div class="edit-contact-detail-entry">
                    <div class="edit-contact-detail-label">
                        <label asp-for="Name">Nom<span class="red">*</span></label>
                    </div>
                    <div class="edit-contact-detail-input">
                        <input asp-for="Name" autocomplete="off"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="edit-contact-detail-entry">
                    <div class="edit-contact-detail-label">
                        <label asp-for="Email1">Adresse Email 1</label>
                    </div>
                    <div class="edit-contact-detail-input">
                        <input asp-for="Email1" autocomplete="off"/>
                        <span asp-validation-for="Email1" class="text-danger"></span>
                    </div>
                </div>

                <div class="edit-contact-detail-entry">
                    <div class="edit-contact-detail-label">
                        <label asp-for="Email2">Adresse Email 2</label>
                    </div>
                    <div class="edit-contact-detail-input">
                        <input asp-for="Email2" autocomplete="off"/>
                        <span asp-validation-for="Email2" class="text-danger"></span>
                    </div>
                </div>
                <div class="edit-contact-detail-entry">
                    <div class="edit-contact-detail-label">
                        <label asp-for="Address">Adresse Physique</label>
                    </div>
                    <div class="edit-contact-detail-input">
                        <input asp-for="Address" autocomplete="off"/>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="edit-contact-detail-entry">
                    <div class="edit-contact-detail-label">
                        <label asp-for="Telephone1">Téléphone 1</label>
                    </div>
                    <div class="edit-contact-detail-input">
                        <input asp-for="Telephone1" autocomplete="off"/>
                        <span asp-validation-for="Telephone1" class="text-danger"></span>
                    </div>
                </div>

                <div class="edit-contact-detail-entry">
                    <div class="edit-contact-detail-label">
                        <label asp-for="Telephone2">Téléphone 2</label>
                    </div>
                    <div class="edit-contact-detail-input">
                        <input asp-for="Telephone2" autocomplete="off"/>
                        <span asp-validation-for="Telephone2" class="text-danger"></span>
                    </div>
                </div>

                <div class="edit-contact-detail-entry">
                    <div class="edit-contact-detail-label">
                        <label asp-for="Fax">Fax</label>
                    </div>
                    <div class="edit-contact-detail-input">
                        <input asp-for="Fax" autocomplete="off"/>
                        <span asp-validation-for="Fax" class="text-danger"></span>
                    </div>
                </div>

                <div class="center-buttons">
                    <div class="processing-icon-block-shown-576 hidden"><i class="ace-icon fas fa-sync fa-spin blue"></i></div>
                    <div class="processing-icon-inline-block-hidden-576 hidden"><i class="ace-icon fas fa-sync fa-spin blue"></i></div>
                    <button class="btn btn-white btn-success btn-bold" type="submit" id="edit-contact-submit-button">
                        <i class="ace-icon fas fa-check-circle"></i>
                        Confirmer
                    </button>
                    <button class="btn btn-white btn-danger btn-bold" type="reset" id="edit-contact-reset-button">
                        <i class="ace-icon fas fa-times-circle"></i>
                        Réinitialiser
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>